<div class="mb-4">
  <h1><%= @board.name %></h1>
  <p>Created by: <%= @board.user.email %></p>
</div>


<div class="board-wrapper">
  <div class="board-container">
    <% @board.height.times do |y| %>
      <div class="row-container">
        <% @board.width.times do |x| %>
          <% if cell_contains_mine?(x, y, @mines) %>
            <div class="cell mine">
              💣
            </div>
          <% else %>
            <div class="cell">
              ⬜️
            </div>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<div class="mt-4">
  <%= link_to "Generate New Board", root_path, class: "btn btn-primary" %>
</div>

<% if @user_boards.any? %>
  <div class="mt-5">
    <h3>Previously Generated Boards by <%= @board.user.email %>:</h3>
    <ul class="list-group mt-3">
      <% @user_boards.each do |previous_board| %>
        <li class="list-group-item">
          <%= link_to previous_board.name, board_path(previous_board) %>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>
